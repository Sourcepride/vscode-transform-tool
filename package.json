{
  "name": "transform-tool",
  "displayName": "transform-tool",
  "description": "convert from one schema, form,  or type to another",
  "version": "0.0.1",
  "publisher": "Sourcepride",
  "icon": "assets/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sourcepride/vscode-transform-tool.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "transform-tool",
        "contents": "Please wait Loading..."
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "transform-tool",
          "title": "Transform",
          "icon": "assets/logo.svg"
        }
      ]
    },
    "views": {
      "transform-tool": [
        {
          "id": "transform-tool-tree",
          "name": "Tool"
        }
      ]
    },
    "commands": [
      {
        "command": "transform.start",
        "title": "Start tool",
        "category": "Transform Tool"
      },
      {
        "command": "transform-tools.processSelectedText",
        "title": "Transform Selected Text",
        "category": "Transform Tool"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "transform-tools.processSelectedText",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "old:vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "vite:build": "tsc -b && vite build",
    "vite:watch": "vite build --watch",
    "vite:preview": "vite preview",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.16.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-embed": "^0.4.15",
    "prettier-plugin-sql": "^0.18.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.6",
    "vscode": "^1.1.34",
    "worker-loader": "^3.0.8"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@monaco-editor/react": "^4.6.0",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.6",
    "@walmartlabs/json-to-simple-graphql-schema": "^3.0.1",
    "@xml-tools/parser": "^1.0.11",
    "buffer": "^6.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "generate-schema": "^2.6.0",
    "graphql": "^16.10.0",
    "json-schema-to-typescript": "^15.0.3",
    "json-schema-to-zod": "^2.6.0",
    "json-to-ts": "^2.1.0",
    "json-to-zod": "^1.1.2",
    "lucide-react": "^0.469.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sql-formatter": "^15.4.8",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "yaml": "^2.6.1",
    "zod-to-json-schema": "^3.24.1"
  }
}